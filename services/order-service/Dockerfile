FROM node:18-alpine

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install all dependencies including dev dependencies for building
RUN npm ci

# Copy source code
COPY . .

# Build TypeScript
RUN npm run build

# Remove dev dependencies for smaller production image
RUN npm prune --production

# Expose port
EXPOSE 3002

# Start the application
CMD ["node", "dist/index.js"]