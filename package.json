{
  "name": "microservices-cicd-pipeline",
  "version": "1.0.0",
  "description": "Comprehensive CI/CD pipeline for microservices application",
  "private": true,
  "workspaces": [
    "services/*"
  ],
  "scripts": {
    "test": "npm run test:unit && npm run test:integration",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "lint": "eslint . --ext .js,.ts",
    "build": "tsc",
    "dev": "nodemon"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^18.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "nodemon": "^2.0.0",
    "typescript": "^5.0.0"
  }
}